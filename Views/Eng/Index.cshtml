<style>


    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: none;
    }


    .btn-primary {
        border-color: #ed8b09
    }


    .abut {
        margin: 20px 0 0;
        display: inline-block;
        text-decoration: none;
        font-weight: 900;
        color: #fff;
        padding: 10px;
        border: 1px solid #ed8b09;
        background: #ed8b09;
        width: 120px;
        text-align:center;
    }

        .abut:hover {
            color: #ed8b09;
            background: transparent;
            border-block-color: #ed8b09;
        }

    .container {
        width: 1000px;
        position: relative;
        display: flex;
        justify-content: space-between;
    }

        .container .card {
            position: relative;
            cursor: pointer;
            border: 0;
        }

            .container .card .face {
                width: 310px;
                height: 200px;
                transition: 0.5s;
            }

                .container .card .face.face1 {
                    position: relative;
                    background: #333;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    z-index: 1;
                    transform: translateY(100px);
                }

            .container .card:hover .face.face1 {
                background: #333;
                transform: translateY(0);
            }


            .container .card .face.face1 .content {
                opacity: 0.8;
                transition: 0.5s;
            }

            .container .card:hover .face.face1 .content {
                opacity: 1;
            }



            .container .card .face.face1 .content h3 {
                margin: 10px 0 0;
                padding: 0;
                text-align: center;
                font-size: 1.5em;
                color: #fff;
            }

            .container .card .face.face2 {
                position: relative;
                background: #fff;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
                box-sizing: border-box;
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.8);
                transform: translateY(-100px);
            }

            .container .card:hover .face.face2 {
                transform: translateY(0);
            }

            .container .card .face.face2 .content p {
                margin: 0;
                padding: 0;
            }

            .container .card .face.face2 .content a {
                margin: 15px 0 0;
                display: inline-block;
                text-decoration: none;
                font-weight: 900;
                color: #fff;
                padding: 5px;
                border: 1px solid #ed8b09;
                background: #ed8b09;
                width: 110px;
            }

                .container .card .face.face2 .content a:hover {
                    color: #ed8b09;
                    background: transparent;
                    border-block-color: #ed8b09;
                }

</style>


<div class="row mb-4" dir="rtl">


   
@foreach (var item in Model) {


       <div class="col col-lg-3 col-md-6 col-sm-12 m-3">
                <div class="container">


                    <div class="card">
                        <div class="face face1">
                            <div class="content">
                                    <h3> @item.EngName  </h3>
                                    <h3> @item.PhoneNumber </h3>
                                    <h3> @item.Email </h3>
                                    <h3> @item.Offices</h3>

                                </div>
                            </div>

                            <div class="face face2">
                                <div class="content">
                                    <p dir="rtl">
                                <h5>
                                    إجمالي العروض
                                   : @item.TotalRatioForEng
                                </h5>
                                <h5>
                                    إجمالي المبالغ المدفوعة
                                    :@item.EngTake
                                </h5>
                                <h5>
                                    إجمالي المبالغ المتبقية
                                    :@item.RestOfEngShow
                                </h5>


                                      @*   <h5>  التواصل :    @Html.DisplayFor(modelItem => item.Connection)</h5>
                                        <h5>  الشركة او المكتب :     @Html.DisplayFor(modelItem => item.CompOrFree)</h5>
                                        <h5>  الإجتماع :    @Html.DisplayFor(modelItem => item.Meeting)</h5>
                                        <h5>  تاريخ الإجتماع :      @Html.DisplayFor(modelItem => item.TimeOfMeeting)</h5>
                                        <h5>  اخر تواصل :    @Html.DisplayFor(modelItem => item.LastCommunication)</h5>
                                        <h5>  تاريخ الانضمام :    @Html.DisplayFor(modelItem => item.Created)</h5> *@
                                    </p>

            
                                <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@item.Id">تعديل</a>
                                <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.Id">كشف المشاريع</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>
