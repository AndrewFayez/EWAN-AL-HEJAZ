@model RenadWebApp.Models.DataModel.ContractModel

@{
    ViewData["Title"] = "EditContract";
}



<style>

    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: none;
    }


    .control-label {
        font-weight: bold;
    }

    .card {
        margin-bottom: 15px;
        transition: 0.3s linear;
        width: 540px;
        padding: 15px;
        margin: 0 auto;
    }

        .card:hover {
            box-shadow: 3px 5px 15px #333;
        }

    .btn-primary {
        border-color: #ed8b09
    }


    .abut {
        margin: 15px 0 0;
        display: inline-block;
        text-decoration: none;
        font-weight: 900;
        color: #fff;
        padding: 5px;
        border: 1px solid #ed8b09;
        background: #ed8b09;
        width: 120px;
        text-align:center;
    }

        .abut:hover {
            color: #ed8b09;
            background: transparent;
            border-block-color: #ed8b09;
        }

    table, td {
        margin: 5px;
        padding: 4px;
    }
</style>


<div class="card" dir="rtl">
    <table>
        <tr style="text-align:center ; background-color:#333;color:#fff">
            <td>
                <h4 style="align-self:center">تعديل العرض</h4>
            </td>
        </tr>

        <form asp-action="EditContract">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <tr>
                <td>
                <div class="form-group">
                    <label asp-for="ProjectName" class="control-label" style="margin-bottom:7px">إسم المشروع</label>
                    <input asp-for="ProjectName" class="form-control" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>

                </td>
            </tr>


        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="ContractNumber" class="control-label" style="margin-bottom:7px">رقم العقد</label>
                    <input asp-for="ContractNumber" class="form-control" />
                    <span asp-validation-for="ContractNumber" class="text-danger"></span>
                </div>

            </td>
        </tr>




        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label" style="margin-bottom:7px">تاريخ الإنشاء</label>
                    <input asp-for="CreatedDate" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

            </td>
        </tr>




         <tr>
                <td>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label" style="margin-bottom:7px">مدة المشروع</label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                </td>
            </tr>




             <tr>
                <td>
                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label" style="margin-bottom:7px">تاريخ التسليم</label>
                    <input asp-for="DeliveryDate" class="form-control" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>

                </td>
            </tr>
            


        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="ProjectBy" class="control-label" style="margin-bottom:7px">من طرف المهندس</label>
                    <input asp-for="ProjectBy" class="form-control" />
                    <span asp-validation-for="ProjectBy" class="text-danger"></span>
                </div>

            </td>
        </tr>





         <tr>
                <td>
                <div class="form-group">
                    <label asp-for="RatioForEng" class="control-label" style="margin-bottom:7px">نسبة المهندس</label>
                    <input asp-for="RatioForEng" class="form-control" />
                    <span asp-validation-for="RatioForEng" class="text-danger"></span>
                </div>

                </td>
            </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="TotalRatioForEng" class="control-label" style="margin-bottom:7px">إجمالي المبلغ للمهندس</label>
                    <input asp-for="TotalRatioForEng" class="form-control" />
                    <span asp-validation-for="TotalRatioForEng" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="TotalOfContract" class="control-label" style="margin-bottom:7px">إجمالي العقد</label>
                    <input asp-for="TotalOfContract" class="form-control" />
                    <span asp-validation-for="TotalOfContract" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="TotalTax" class="control-label" style="margin-bottom:7px">قيمه الضريبه</label>
                    <input asp-for="TotalTax" class="form-control" />
                    <span asp-validation-for="TotalTax" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="TotalAmount" class="control-label" style="margin-bottom:7px">إجمالي المبلغ قبل الضريبه</label>
                    <input asp-for="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="RestOfContractShow" class="control-label" style="margin-bottom:7px">الباقي من إجمالي العقد</label>
                    <input asp-for="RestOfContractShow" class="form-control" />
                    <span asp-validation-for="RestOfContractShow" class="text-danger"></span>
                </div>

            </td>
        </tr>


          <tr>
            <td>
                <div class="form-group">
                    <label asp-for="RestOfEngShow" class="control-label" style="margin-bottom:7px">الباقي من مبلغ المهندس</label>
                    <input asp-for="RestOfEngShow" class="form-control" />
                    <span asp-validation-for="RestOfEngShow" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="RestOfTAxShow" class="control-label" style="margin-bottom:7px"> الباقي من مبلغ الضريبة</label>
                    <input asp-for="RestOfTAxShow" class="form-control" />
                    <span asp-validation-for="RestOfTAxShow" class="text-danger"></span>
                </div>

            </td>
        </tr>


        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="Approved" class="control-label" style="margin-bottom:7px"> الموافقة</label>
                    <input asp-for="Approved" class="form-control" />
                    <span asp-validation-for="Approved" class="text-danger"></span>
                </div>

            </td>
        </tr>



        <tr style="text-align:center">
            <td>
                <div class="form-group">
                    <input type="submit" value="حفظ" class="abut" />
                </div>

            </td>
        </tr>



        </form>
    </table>
</div>
<div>
    <a asp-action="Index" class="abut">الصفحة الرئيسية</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
