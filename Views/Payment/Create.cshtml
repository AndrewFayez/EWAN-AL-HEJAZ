@model RenadWebApp.Models.DataModel.PaymentModel

@{
    ViewData["Title"] = "Create";
}

<style>

    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: none;
    }


    .control-label {
        font-weight: bold;
    }

    .card {
        margin-bottom: 15px;
        transition: 0.3s linear;
        width: 540px;
        padding: 15px;
        margin: 0 auto;
    }

        .card:hover {
            box-shadow: 3px 5px 15px #333;
        }

    .btn-primary {
        border-color: #ed8b09
    }


    .abut {
        margin: 15px 0 0;
        display: inline-block;
        text-decoration: none;
        font-weight: 900;
        color: #fff;
        padding: 5px;
        border: 1px solid #ed8b09;
        background: #ed8b09;
        width: 120px;
        text-align: center;
    }

        .abut:hover {
            color: #ed8b09;
            background: transparent;
            border-block-color: #ed8b09;
        }

    table, td {
        margin: 5px;
        padding: 4px;
    }
</style>


<div class="card" dir="rtl">
    <table>
        <tr style="text-align:center ; background-color:#333;color:#fff">
            <td>
                <h4 style="align-self:center">إضافة دفعة</h4>
            </td>
        </tr>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <tr>
                <td>

            <div class="form-group">
                    <label asp-for="PaymentNumber" class="control-label">رقم الدفعة</label>
                <input asp-for="PaymentNumber" class="form-control" />
                <span asp-validation-for="PaymentNumber" class="text-danger"></span>
            </div>
                </td>
            </tr>

        <tr>
            <td>
            <div class="form-group">
                    <label asp-for="Payments" class="control-label">المدفوع</label>
                <input asp-for="Payments" class="form-control" />
                <span asp-validation-for="Payments" class="text-danger"></span>
            </div>
            </td>
        </tr>


        <tr>
            <td>
            <div class="form-group">
                    <label asp-for="DateForPayment" class="control-label">تاريخ الدفع</label>
                <input asp-for="DateForPayment" class="form-control" />
                <span asp-validation-for="DateForPayment" class="text-danger"></span>
            </div>
            </td>
        </tr>

        <tr>
            <td>
            <div class="form-group">
                    <label asp-for="DueDate" class="control-label">تاريخ الإستحقاق</label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            </td>
        </tr>


        <tr>
            <td>
            <div class="form-group">
                    <label asp-for="PayMentValue" class="control-label">قيمة الدفعة</label>
                <input asp-for="PayMentValue" class="form-control" />
                <span asp-validation-for="PayMentValue" class="text-danger"></span>
            </div>
            </td>
        </tr>

 
       
        <tr style="text-align:center">
            <td>
                <div class="form-group">
                    <input type="submit" value="إضافة" class="abut" />
                </div>

            </td>
        </tr>


        </form>
    </table>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="abut"> الصفحة الرئيسية</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



