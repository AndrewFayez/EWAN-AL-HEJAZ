@model RenadWebApp.Models.DataModel.LoginModel


@{
  Layout = null;
}


 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RenadWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RenadWebApp.styles.css" asp-append-version="true" />

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Splash Screen</title>
    <link rel="stylesheet" href="styles.css">

    <style>
        .navbar {
            background: #333;
            padding: 0;
            margin: 0
        }


        ul li {
            padding: 15px;
        }

            ul li:hover {
                background: #ed8b09;
            }





        .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
            box-shadow: none;
        }


        .control-label {
            font-weight: bold;
        }

        .card {
            margin-bottom: 15px;
            transition: 0.3s linear;
            width: 540px;
            padding: 15px;
            margin: 0 auto;
            height:450px
        }

            .card:hover {
                box-shadow: 3px 5px 15px #333;
            }

        .btn-primary {
            border-color: #ed8b09
        }


        .abut {
            margin: 15px 0 0;
            display: inline-block;
            text-decoration: none;
            font-weight: 900;
            color: #fff;
            padding: 5px;
            border: 1px solid #ed8b09;
            background: #ed8b09;
            width: 120px;
            text-align: center;
        }

            .abut:hover {
                color: #ed8b09;
                background: transparent;
                border-block-color: #ed8b09;
            }

        table, td {
            margin: 20px;
            padding: 15px;
        }

/*     slash
 */
         body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        #splash-screen {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #fff; /* Change this to your desired background color */
            z-index: 9999;
        }

        #logo {
            width: 0;
            height: auto;
            animation: growLogo 2s forwards; /* Adjust the duration (2s) as needed */
        }

        @@keyframes growLogo {
            from {
                width: 0;
            }
            to {
                width: 300px;
            }
        }

        #content {
            display: none;
        }






  
    </style>
</head>
<body   >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-3">
            <div class="container-fluid p-0" dir="rtl">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 p-0 m-0">
                   
                      
                    </ul>
                </div>
                <a class="navbar-brand m-0" asp-area=""  style="background:#ed8b09;padding:20px 30px; font-weight:bold">EWAN AL-HEJAZ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>


    @if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "Fail")
    {
        <div class="alert alert-warning" role="alert">
            UserName Or Password Is Not Correct..!
        </div>
    }


    
    <div class="card" dir="rtl"  >

        <table>
            <tr style="text-align:center ; background-color:#333;color:#fff">
                <td>
                    <h4 style="align-self:center">تسجيل الدخول</h4>
                </td>
            </tr>
                <form asp-action="Login" asp-controller="Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <tr style="margin-bottom:10px">
                    <td>
                    <div class="form-group">
                        <label asp-for="username" style="margin-bottom:10px" class="control-label">UserName</label>
                        <input asp-for="username" class="form-control" placeholder="Name" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                    </td>
                    </tr>


            <tr style="margin-bottom:10px">
                <td>
                    <div class="form-group">
                        <label asp-for="password" style="margin-bottom:10px" class="control-label">Password</label>
                        <input asp-for="password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                </td>
            </tr>

            <tr style="margin-bottom:10px ; text-align:center">
                <td>
                    <div class="form-group">
                        <input type="submit" class="abut" value="Login" class="btn btn-primary" />
                    </div>
                </td>
            </tr>
                </form>
           
        </table>

    </div>

      

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
    <div id="splash-screen">
        <img src="~/LOGOV.png" alt="Logo" id="logo">
    </div>
   
    <script src="scripts.js"></script>
    <script>
        // scripts.js
window.addEventListener('load', () => {
    const splashScreen = document.getElementById('splash-screen');
    const content = document.getElementById('content');

    setTimeout(() => {
        splashScreen.style.opacity = '0';
        splashScreen.style.transition = 'opacity 0.5s ease';

        setTimeout(() => {
            splashScreen.style.display = 'none';
            content.style.display = 'block';
        }, 500);
    }, 3000); // Adjust the timeout duration (3000ms = 3s) as needed
});

    </script>
</body>
</html>

 